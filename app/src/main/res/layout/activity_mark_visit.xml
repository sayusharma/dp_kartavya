<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".MarkVisitActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/bgcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/visittoolbar"
        app:cardElevation="5dp"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:onClick="onClickBackMarkVisit"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/open_sans_bold"
                android:text="Visit A Senior Citizen"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/editRel"
        android:layout_below="@id/visittoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/searchByNameEditText"
            android:hint="Search By Name"
            android:textColorHint="#807D7D"
            android:textColor="@color/colorPrimary"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_account_circle_24"
            android:padding="4dp"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold"
            android:background="@drawable/search_edittext"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/editRel2"
        android:layout_below="@id/editRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/searchByMobEditText"
            android:hint="Search By Mobile Number"
            android:textColorHint="#807D7D"
            android:textColor="@color/colorPrimary"
            android:drawablePadding="5dp"
            android:inputType="number"
            android:maxLength="10"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:padding="4dp"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold"
            android:background="@drawable/search_edittext"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/snrRecycler"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/editRel2"
        android:layout_height="match_parent"/>
</RelativeLayout>