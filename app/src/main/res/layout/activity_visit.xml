<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgcolor"
    android:layout_height="match_parent"
    tools:context=".VisitActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/bgcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/visitToolbar"
        app:cardElevation="5dp"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="6dp"
                android:onClick="onClickBackVisit"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/open_sans_bold"
                android:text="Mark A Visit"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:id="@+id/profileCard"
        android:layout_margin="10dp"
        android:layout_below="@id/visitToolbar"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/logo"
                android:layout_width="90dp"
                android:id="@+id/visitImg"
                android:layout_height="90dp"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@id/visitImg"
                android:layout_height="90dp">
                <TextView
                    android:textColor="@color/bgcolor"
                    android:textSize="20sp"
                    android:text="AYUSH SHARMA"
                    android:id="@+id/visitName"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/bgcolor"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"/>
                <TextView
                    android:textColor="@color/bgcolor"
                    android:textSize="16sp"
                    android:id="@+id/visitMob"
                    android:text="8077919303"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@id/profileCard"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_baseline_account_box_24"
                    android:layout_width="200dp"
                    android:id="@+id/visitRecentPhoto"
                    android:layout_height="200dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/tenant_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:onClick="onClickAddRecentPhoto"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/add_image_design"
                android:elevation="0dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/criminaltoolbar">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:src="@drawable/addimage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Add Recent Image"
                    android:textColor="#1f2144"
                    android:textSize="16sp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="36dp"
                android:layout_width="wrap_content"
                android:text="Notes"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/open_sans_bold"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/visitNotes"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="2dp"
                android:textColorHint="#bdbdbd"
                android:layout_marginEnd="34dp"
                android:inputType="textCapSentences"
                android:backgroundTint="#bdbdbd"
                android:fontFamily="@font/open_sans_semibold"
                android:hint="Enter Notes"
                android:textColor="#1f2144"
                android:maxLines="1"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mark Visit"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:layout_marginStart="33dp"
                android:onClick="onClickMarkThisVisit"
                android:layout_marginEnd="32dp"
                android:padding="6dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>